import java.io.*;
public class Amstrongnumber
{
    public static void main(String[] args)
    {
        int n= 153;
        int num= n;
        int arm= 0;
        while (num!=0)
        {
            int rem= num % 10;
            arm += rem*rem*rem;
            num /= 10;
        }
        if (n==arm)
        {
            System.out.println(n+ "is an Armstrong number");
        }
        else
        {
            System.out.println(n+ "is not an Armstrong number");
        }
            
        }
    }
OUTPUT: 
153is an Armstrong number

    

    
