import java.io.*;
public class Armstrongnumber
{
    public static void main(String[] args)
    {
        int num = 153;
        int originalnum= num;
        int sum = 0;
        int digits = 0;
        int temp = num;
        while (temp!=0);
        {
            digits++;
            temp/=10;
        }
        temp = num;
        while (temp!=0)
        {
            int digit = temp%10;
            int power=1;
            for(int i=1; i<=digits; i++)
            {
                power*=digit;
            }
            sum +=power;
            temp/=10;
        }
        if (sum==originalnum)
        {
            System.out.println(originalnum+"is an Armstrong number");
        }
        else
        {
            System.out.println(originalnum+"is NOT an Armstrong number");
        }
        }
            }
    

    
